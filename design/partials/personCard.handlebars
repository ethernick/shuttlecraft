<div class="personCard">
    {{> avatar actor=actor}}
    <div class="profile">
        <a href="/private/feeds/{{getUsername actor.id}}" class="author">{{actor.name}}</a>
        <span class="handle">{{getUsername actor.id}}</span>
        {{#unless nobio}}
        {{{summary}}}
        {{/unless}}
    </div>
</div>